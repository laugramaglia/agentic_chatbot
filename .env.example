# =============================================================================
# Shopping Cart Chatbot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Usage: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# General Configuration
# -----------------------------------------------------------------------------
BUILD_ENV=production
GO_VERSION=1.21
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# SurrealDB Configuration (Multi-Cloud Platform)
# -----------------------------------------------------------------------------
# Get these from your SurrealDB MCP dashboard
SURREALDB_URL=wss://your-instance.surreal.cloud
SURREALDB_NAMESPACE=production
SURREALDB_DATABASE=chatbot

# Service-specific database passwords
CHAT_SERVICE_DB_PASSWORD=change_me_chat_service_password_123
CART_SERVICE_DB_PASSWORD=change_me_cart_service_password_456
PRODUCT_SERVICE_DB_PASSWORD=change_me_product_service_password_789
SESSION_SERVICE_DB_PASSWORD=change_me_session_service_password_abc

# -----------------------------------------------------------------------------
# Groq API Configuration
# -----------------------------------------------------------------------------
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=512

# -----------------------------------------------------------------------------
# Embedding Service Configuration
# -----------------------------------------------------------------------------
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# -----------------------------------------------------------------------------
# API Gateway Configuration
# -----------------------------------------------------------------------------
API_GATEWAY_PORT=8080
JWT_SECRET=your_super_secret_jwt_key_change_me_in_production
JWT_EXPIRY=24h

# Rate Limiting (requests per minute)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_CHAT=30

# Service Timeouts
CHAT_SERVICE_TIMEOUT=30s
CART_SERVICE_TIMEOUT=10s
PRODUCT_SERVICE_TIMEOUT=15s
SESSION_SERVICE_TIMEOUT=10s
RECOMMEND_SERVICE_TIMEOUT=20s

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# -----------------------------------------------------------------------------
# Microservice Ports
# -----------------------------------------------------------------------------
CHAT_SERVICE_PORT=8081
CART_SERVICE_PORT=8082
PRODUCT_SERVICE_PORT=8083
SESSION_SERVICE_PORT=8084
RECOMMEND_SERVICE_PORT=8085

# -----------------------------------------------------------------------------
# Vector Search Configuration
# -----------------------------------------------------------------------------
VECTOR_SEARCH_THRESHOLD=0.7
VECTOR_SEARCH_LIMIT=5

# -----------------------------------------------------------------------------
# Cart Service Configuration
# -----------------------------------------------------------------------------
MAX_CART_ITEMS=50
MAX_ITEM_QUANTITY=100

# -----------------------------------------------------------------------------
# Session Service Configuration
# -----------------------------------------------------------------------------
SESSION_TIMEOUT=24h
SESSION_CLEANUP_INTERVAL=1h

# -----------------------------------------------------------------------------
# Recommendation Service Configuration
# -----------------------------------------------------------------------------
MAX_RECOMMENDATIONS=5
MIN_SCORE=3.0

# -----------------------------------------------------------------------------
# Circuit Breaker Configuration
# -----------------------------------------------------------------------------
CIRCUIT_BREAKER_MAX_REQUESTS=3
CIRCUIT_BREAKER_TIMEOUT=60s

# -----------------------------------------------------------------------------
# Caching Configuration
# -----------------------------------------------------------------------------
ENABLE_CACHE=true
CACHE_TTL=300

# -----------------------------------------------------------------------------
# Development/Debug Settings
# -----------------------------------------------------------------------------
# Uncomment for development
# LOG_LEVEL=debug
# BUILD_ENV=development

# -----------------------------------------------------------------------------
# Production Overrides
# -----------------------------------------------------------------------------
# For production deployment, set these:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# LOG_LEVEL=warn
# ENABLE_CACHE=true
